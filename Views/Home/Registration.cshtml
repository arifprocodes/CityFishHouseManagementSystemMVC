@model  OnlineFishHouseManagementSystemMVC.Models.UserTB
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<center>

    <br />
    <br />
    <br />
    <br />
    <br />
    <table border="3" class="rgtable" bgcolor="Yellow" width="400px" height="250px">
            @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
            {
                <tr>
                    <td colspan="2" align="center"><h2>Register Now</h2></td>
                </tr>
                <tr>
                    <td align="center">First Name</td>
                    <td align="center">@Html.TextBoxFor(m => m.firstName, "{0:#.#}")</td>
                </tr>
                <tr>
                    <td align="center">LastName</td>
                    <td align="center">@Html.TextBoxFor(m => m.lastName, "{0:#.#}")</td>
                </tr>
                  <tr>
                    <td align="center">Gender</td>
                    <td align="center">@Html.TextBoxFor(m => m.gender)</td>
                </tr>
                <tr>
                    <td align="center">Email</td>
                    <td align="center">@Html.TextBoxFor(m => m.email)</td>
                </tr>
                <tr>
                    <td align="center">Mobile</td>
                    <td align="center">@Html.TextBoxFor(m => m.mobile)</td>
                </tr>
                <tr>
                    <td align="center">UserName</td>
                    <td align="center">@Html.TextBoxFor(m => m.userName)</td>
                </tr>
                <tr>
                    <td align="center">PassWord</td>
                    <td align="center">@Html.TextBoxFor(m => m.pass)</td>
                </tr>
                <tr>
                    <td align="center">Confirm Password</td>
                    <td align="center">@Html.TextBoxFor(m => m.pass)</td>
                </tr>



                <tr>
                    <td colspan="2" align="center"><input type="submit" class="btn" name="btrSubmit" value="Registration" bgcolor="Green" /></td>
                </tr>
            }
        </table>
    <br />
    <br />
    <br />
    <br />
    <br />

</center>


